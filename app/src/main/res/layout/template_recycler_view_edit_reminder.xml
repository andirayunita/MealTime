<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:background="@drawable/meals_time_box"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="18dp"
        android:paddingVertical="24dp"
        android:gravity="center">

        <EditText
            android:id="@+id/template_recycler_view_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_black"
            android:backgroundTint="@color/yellow"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/template_recycler_view_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="24sp"
            />

        <ImageButton
            android:id="@+id/template_recycler_view_edit_delete"
            android:background="#FEF9E9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_circle"/>
        <ImageButton
            android:id="@+id/template_recycler_view_edit_update"
            android:background="#FEF9E9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_baseline_update"/>
    </LinearLayout>


</LinearLayout>