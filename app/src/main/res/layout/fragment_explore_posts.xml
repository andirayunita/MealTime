<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExplorePostsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">


            <EditText
                android:id="@+id/fragment_explore_post_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Share your post"
                android:focusable="false"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_marginBottom="8dp"
                android:padding="15dp"
                android:background="@drawable/share_post_textfield_box"
                android:inputType="text" />

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/fragment_explore_post_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>