<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpInfoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/activity_help_info_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Info"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:id="@+id/activity_help_info_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How can we help you today?"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_help_info_TIL_prob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconTint="@color/navy"
            app:errorIconDrawable="@drawable/ic_exclamation"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:elevation="2dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0.7dp"
            android:theme="@style/TextInputLayoutStyle"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0.7dp"
            android:layout_marginTop="16dp"
            android:hint="Send Your Problem Here"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/activity_help_info_edtTxt_prob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Send Your Problem Here"
                android:inputType="text|textMultiLine"
                android:gravity="top"
                android:minLines="5"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_help_info_TIL_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconTint="@color/navy"
            app:errorIconDrawable="@drawable/ic_exclamation"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:elevation="2dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0.7dp"
            android:theme="@style/TextInputLayoutStyle"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0.7dp"
            android:layout_marginTop="16dp"
            android:hint="Please enter your email for contact"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/activity_help_info_edtTxt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter your email for contact"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>