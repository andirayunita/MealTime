<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/activity_change_password_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back"
            android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_change_password_txtInputLayoutCurPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/navy"
            app:errorIconDrawable="@drawable/ic_exclamation"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:elevation="2dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0.7dp"
            android:theme="@style/TextInputLayoutStyle"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0.7dp"
            android:layout_marginTop="16dp"
            android:hint="Current Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/activity_change_password_edtTextCurrPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_outline_lock"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_change_password_txtInputLayoutNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/navy"
            app:errorIconDrawable="@drawable/ic_exclamation"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:elevation="2dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0.7dp"
            android:theme="@style/TextInputLayoutStyle"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0.7dp"
            android:layout_marginTop="16dp"
            android:hint="New Passsword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/activity_change_password_edtTextNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_outline_lock"
                android:hint="New Passsword"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_change_password_txtInputLayoutRNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/navy"
            app:errorIconDrawable="@drawable/ic_exclamation"
            app:errorTextAppearance="@style/ErrorTextAppearance"
            android:elevation="2dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeWidth="0.7dp"
            android:theme="@style/TextInputLayoutStyle"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0.7dp"
            android:layout_marginTop="16dp"
            android:hint="Re-type new password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/activity_change_password_edtTextRNewPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_outline_lock"
                android:hint="Re-type new password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/activity_change_password_btnChange"
            android:background="@drawable/button_primary"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_black"
            android:text="Change Password"/>

    </LinearLayout>

</LinearLayout>