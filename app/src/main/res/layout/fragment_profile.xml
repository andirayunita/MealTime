<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_info_bg"
                android:orientation="vertical"
                android:gravity="center"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:fontFamily="@font/roboto_black"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    app:strokeWidth="1dp"
                    android:scaleType="fitXY"
                    android:layout_marginVertical="16dp"
                    android:src="@drawable/dummy"
                    />
                <TextView
                    android:id="@+id/fragment_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Andira Yunita"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/fragment_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="andira@gmail.com"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="16sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp">

                <LinearLayout
                    android:id="@+id/fragment_profile_edt_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/profile_list_item">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_edit"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_profile_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/profile_list_item">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_outline_lock_yellow"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_profile_post_liked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/profile_list_item">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts You've Liked"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_favorite_full"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_profile_help_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/profile_list_item">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help &amp; Information"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_help"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/fragment_profile_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/profile_list_item">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log out"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_logout"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>