<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchScreen"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_launch_screen"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_launch_screen_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:outlineSpotShadowColor="#00000000"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/roboto_bold"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#323941"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_launch_screen_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:outlineSpotShadowColor="#00000000"
            android:background="@drawable/button_secondary"
            android:fontFamily="@font/roboto_bold"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#F9B600"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>